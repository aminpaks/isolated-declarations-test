{
    "compilerOptions": {
      "target": "es2019",
      "module": "esnext",
      "moduleResolution": "bundler",
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": true,
      "isolatedDeclarations": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "verbatimModuleSyntax": true,
      "strict": true,
      "skipLibCheck": true,

      "composite": true,
      "incremental": true,

      "rootDir": ".",
      "baseUrl": "./src",
      "outDir": "./dist",

      "paths": {
        "~/*": ["./*"],
      },
    }
  }
